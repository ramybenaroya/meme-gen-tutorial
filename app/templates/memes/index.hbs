<div class='memes-container'>
	<div class='memes-filters'>
		<div class="form-group">
			{{#link-to 'memes.create'}}
				<button type="button" class="btn btn-default full-width" aria-label="Left Align">
				  <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
				  Create a Meme
				</button>
			{{/link-to}}
		</div>
		<div class="form-group">
			{{input value=searchTerm classNames='form-control' placeholder='Filter by meme text'}}
		</div>
		<div class="users">
			<div class="panel panel-default">
				<div class="panel-heading">
					Filter by Users
				</div>
				<div class="panel-body">
					{{#each user in users}}{{user-filter-toggler tagName='div' content=user toggleUser='toggleUser' selected=user.selected}}{{/each}}
				</div>
			</div>
		</div>
	</div>
	<div class="memes-list">
		{{#each meme in filteredMemes}}
			{{meme-list-item content=meme toggleLike='toggleLike' deleteMeme='deleteMeme'}}
		{{else}}
			<div class="panel panel-default">
			  <div class="panel-body center">
			    No memes were found
			  </div>
			</div>
		{{/each}}
	</div>
</div>